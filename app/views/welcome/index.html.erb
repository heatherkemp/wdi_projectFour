<div class="row">
  <div class="small-11 small-centered large-4 columns">
    <div id="loginBox">
<%= form_tag("/sessions", method: "post") do %>
        <%= label_tag "Email:" %>
        <%= email_field_tag :email %>
        <%= label_tag "Password:" %>
        <%= password_field_tag :password %>
        <%= submit_tag "Sign In" %>
        <% end %>

        <div class="newUser">
            <p class="blackText">New User? &nbsp;</p>
            <%= form_tag("/welcome/new", method: "get") do %>
            <%= submit_tag "Create An Account" %>
            <% end %>
           <!--  <input type="submit" value="Create An Account"> -->
        </div>
    </div>
  </div>
</div>