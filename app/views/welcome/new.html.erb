<div class="row">
  <div class="small-11 small-centered large-4 columns">
    <div id="newUserBox">
<%= form_tag("/api/users", method: "post") do %>
        <%= label_tag "Name:" %>
        <%= email_field_tag :name %>
        <%= label_tag "Email:" %>
        <%= email_field_tag :email %>
        <%= label_tag "Password:" %>
        <%= password_field_tag :password %>
        <%= submit_tag "Create Account" %>
        <% end %>
    </div>
  </div>
</div>